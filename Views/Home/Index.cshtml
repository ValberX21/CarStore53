@model CarStore53.Models.LotModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Car Store 53</h1>
    <p>Now you can import and control products and ships</a>.</p>
</div>

<div class="container mt-5">
    <table class="table table-striped table-bordered mt-4">
        <thead class="table-dark">
            <tr>
                <th>LotNumber</th>
                <th>ImportDate</th>
                <th>ShipId</th>
                <th>StatusId</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lot in Model.LotList)
            {
                <tr>
                    <td>@lot.LotNumber</td>
                    <td>@lot.ImportDate.Date</td>
                    <td>@lot.ShipName</td>
                    <td>@lot.StatusName</td>
                </tr>
            }
        </tbody>
        <a asp-action="GenerateReport" asp-controller="Home" class="btn btn-success btn-sm">Generate Report</a>
    </table>
</div>